{
    "version": "2.0.0",
    "tasks": [
		{
			"label": "Make Directories",
			"type": "process",
			"command": "${workspaceFolder}\\make_dir.bat",
			"options": {
				"cwd":"${workspaceFolder}"
			},
			"group": "none"
		},
		{
			"label": "Debug Batch Build",
			"type": "process",
			"command": "${workspaceFolder}\\build_debug.bat",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"dependsOn":["Make Directories"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Release Batch Build",
			"type": "process",
			"command": "${workspaceFolder}\\build_release.bat",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"dependsOn":["Make Directories"],
			"group": "build",
		},
	]
}